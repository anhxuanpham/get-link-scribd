# Scribd Account Credentials
SCRIBD_EMAIL=your_scribd_email@example.com
SCRIBD_PASSWORD=your_scribd_password

# Zoho Email for OTP (if 2FA is enabled)
ZOHO_EMAIL=your_zoho_email@zohomail.com
ZOHO_PASSWORD=your_zoho_password
ZOHO_IMAP_SERVER=imap.zoho.com
ZOHO_IMAP_PORT=993

# Cloudflare Turnstile (Get from https://dash.cloudflare.com/?to=/:account/turnstile)
TURNSTILE_SITE_KEY=your_turnstile_site_key_here
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here

# Optional: Node environment
NODE_ENV=production
